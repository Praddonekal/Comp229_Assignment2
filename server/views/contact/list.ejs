<%- include('../partials/header.ejs') -%>
<%- include('../partials/main_nav.ejs') -%>


<link rel='stylesheet' href='/Content/services_page.css' />

<!-- services page -->
<div class="services-section">
  <h2>CONTACT LIST</h2>
  <p>LIST OF CONTACTS ADDED</p>
</div>
  <main class="container">
  <div class="row">
      <div class="col-md-offset-3 col-md-6">
<br><br>
          <% if(typeof displayName == 'string' && displayName) { %>
          <a href="/contact-list/add" class="btn btn-primary" roll="button">
           </i> Add a Contact</a>
           <br>
           <%} %>
          <br>
          <table class="table table-bordered table-striped table-hover">
              <!--Header Row-->
              <tr class="d-flex">
              <% if(typeof displayName == 'string' && displayName) { %>
                  <th class="text-center col-4">Name of Contact</th>
                  <th class="text-center col-3">Number</th>
                  <th class="text-center col-5">Email</th>
                  <th class="text-center col-3">     </th>
                  <th class="text-center col-3">     </th>
                  <% } else { %>
                  <th class="text-center col-4">Name of Contact</th>
                  <th class="text-center col-3">Number</th>
                  <th class="text-center col-4">Email</th>
                  
                  <% } %>
              </tr>

              <!-- Repeatable Template Row-->

              <% for(let count = 0; count <ContactList.length;count++) { %>
                <tr class= "d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                    <td class="text-center col-4"><%= ContactList[count].name %></td>
                    <td class="text-center col-3"><%= ContactList[count].number %></td>
                    <td class="text-center col-5"><%= ContactList[count].email %></td>
                    <td class="text-center col-3">
                        <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                        </i> Update</a>
                    </td>
                    <td class="text-center col-3">
                        <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                        </i> Delete</a>
                    </td>
                    <% } else { %>
                    <td class="text-center col-4"><%= ContactList[count].name %></td>
                    <td class="text-center col-3"><%= ContactList[count].number %></td>
                    <td class="text-center col-5"><%= ContactList[count].email %></td>
                    <% } %>
                </tr>
                <% } %>
          </table>
      </div> 
  </div>
 <br><br><br><br><br>
  </main>

  
<%- include('../partials/bottom_nav.ejs') -%>
